---
const {head, text, soldOut, fewLeft} = Astro.props;
import ScarcityLabelUdsolgt from "./Scarcity_label_udsolgt.astro";
import ScarcityLabelFtilbage from "./Scarcity_label_fåtilbage.astro";
---
<div class="camping_card">
{soldOut && <div><ScarcityLabelUdsolgt></ScarcityLabelUdsolgt></div>}
{fewLeft && <div><ScarcityLabelFtilbage></ScarcityLabelFtilbage></div>}
    <div class="roundbutton">
        <a href="/billetter">
        <p class="linkbuttontext">køb her</p>
        </a>
    </div>
    <a href="/billetter"> 
        <h4>{head}</h4>
        <p class="small">{text}</p>
    </a>   
</div>

<style>
    .camping_card {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 289px;
    height: 426px;
    background-color: var(--color-cards-ticket-background-default);
    border-radius: var(--spacing-corner-radius-medium);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}

a {
    text-decoration: none;
}

h4 {
    color: var(--color-cards-ticket-text-main);
    margin-top: 35%;
    text-align: center;
    text-transform: uppercase;
}

.small {
    color: var(--color-cards-ticket-text-main);
    margin: var(--spacing-margin-small);
    text-align: center;
}

.camping_card:hover {
    background: var(--color-cards-ticket-background-hover);
    color: var(--color-green-400);
}

.camping_card:active {
    background: var(--color-cards-ticket-background-hover);
    color: var(--color-green-400);
}

.camping_card:hover .date {
    display: none;
}

.roundbutton {
    display: none;
    position: absolute;
    left: 30%;
    top: 35%;
    width: 120px;
    height: 120px;
    justify-content: center;
    align-items: center;
}

.camping_card:hover .roundbutton {
    display: flex;
}

.roundbutton a {
    width: 100%;
    height: 100%;
    text-decoration: none;
    background: var(--color-button-roundbutton-background-hover);
    color: var(--color-button-roundbutton-text-hover);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.roundbutton a:active {
    background: var(--color-button-roundbutton-background-Active);
}

.linkbuttontext {
    margin: 0;
    padding: 0;
    color: inherit;
}

.linkbuttontext p {
    margin: 0;
    padding: 0;
}

.linkbuttontext p:hover, .linkbuttontext p:active {
    color: var(--color-button-roundbutton-text-hover);
}

@media (max-width: 700px) {


h4 {
  font-size: 38px;
  line-height: 40px;
}
}

</style>