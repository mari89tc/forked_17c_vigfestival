---
const {head} = Astro.props; 
---
<div>
    <a href="/">
    <h5>{head}</h5>
    </a>
</div>
<style>
div {
display: flex;
width: 230px;
height: 230px;
flex-direction: column;
justify-content: space-between;
align-items: center;
flex-shrink: 0;
border-radius: 360px;
box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
h5 {
color: var(--Color-Cards-round-text-default, #0A0A0A);
text-align: center;    
}
a {
    background: var(--Color-Cards-round-background-default, #D7F19F);
}
a:hover {
    background: var(--Color-Cards-round-background-hover, #FFD9FD);
}
a:active {
    background: var(--Color-Cards-round-background-active, #FF9CF9);
}
</style>