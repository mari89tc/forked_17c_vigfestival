---
import SkemaCardOneHour from "../components/SkemaCardOnehour.astro"
import SkemaCardOneAndAHalf from "../components/SkemaCardOneandahalf.astro"
import SkemaCardLong from "../components/SkemaCardLong.astro"
import SkemaCardOnehour from "../components/SkemaCardOnehour.astro"
---
<div class="slideshow-container">
    <div class="prev_next">
            <img class="prev" onclick="plusSlides(-1)" src="/logos/back_button.svg" alt="back button" width="85px" height="85px">
            <img class="next next_but" onclick="plusSlides(1)" src="/logos/back_button.svg" alt="back button" width="85px" height="85px">
    </div>  
    <div class="mySlides fade">
        <div class="page">
            <div class="content">
                <h4>Stor Scene</h4>
                <div class="storscene">
                    <SkemaCardOneHour head="Birthe Kjær & feel good band" time="12:00"/>
                    <SkemaCardOneHour head="Eagle-Eye Cherry" time="15:00"/>
                    <SkemaCardOneHour head="Medina" time="18:00"/>
                    <SkemaCardOneHour head="Andreas Odbjerg" time="21:00"/> 
                    <SkemaCardOneHour head="D-A-D" time="23:30"/>
                </div>
            </div>
            <div class="content">
                <h4>Hønsehuset</h4>
                <div class="honsehuset">
                    <SkemaCardOneHour head="Vig Stand-up" time="13:30"/>
                    <SkemaCardOneHour head="Ida Laurberg" time="16:30"/>
                    <SkemaCardOneAndAHalf head="L.I.G.A" time="19:30"/>
                    <SkemaCardOneAndAHalf head="Johnny Deluxe" time="22:30"/>   
                </div>
            </div>
            <div class="content">
                <h4>Heartbeat</h4>
                <div class="heartbeat">
                    <SkemaCardOneHour head="C21" time="15:00"/>
                    <SkemaCardOneAndAHalf head="Bo Evers" time="18:00"/>
                    <SkemaCardOneAndAHalf head="Bon Jovi DK" time="21:30"/>
                    <SkemaCardLong head="DJ 4Gaard" time="23:00"/>
                </div>   
            </div> 
        </div>
    </div>
    <div class="mySlides fade">
        <div class="page">
            <div class="content">
                <h4>Viggos Verden</h4>
                <div class="viggosverden">
                    <SkemaCardOneAndAHalf head="Mikkel Rugholm" time="13:30"/>
                    <SkemaCardOneAndAHalf head="KreaBix Live" time="16:15"/>
                    <SkemaCardOnehour head="ShadysMC-Judex" time="17:30"/>
                </div>   
            </div>   
            <div class="content">
                <h4>Studio 54</h4>
                <div class="studio54">
                    <SkemaCardOneHour head="Mathis Vincent" time="13:15"/>
                    <SkemaCardOneHour head="Mads Christian" time="16:30"/>
                    <SkemaCardOneHour head="Bænch" time="19:15"/>
                    <SkemaCardOneHour head="Milling & Molbech P4" time="22:15"/>
                    <SkemaCardOneHour head="Milling & Molbech P4" time="00:15"/>
                </div>   
            </div>   
            <div class="content">
                <h4>Hønsegården</h4>
                <div class="honsegaarden">
                    <SkemaCardOneHour head="Ricki Solo" time="14:45"/>
                    <SkemaCardOneHour head="Ricki Solo" time="17:45"/>
                    <SkemaCardOneHour head="Ricki Solo" time="20:45"/>
                </div>   
            </div> 
        </div>
    </div>
</div>
<script src="/src/scripts/slider.js"></script>

<style>
.slideshow-container {
  max-width: 1400px;
  position: relative;
  margin: auto;
}
.mySlides {
  display: none;
}
.mySlides:first-child {
  display: block;
}
.prev_next {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.prev, .next {
  cursor: pointer;
  width: auto;
  padding: 16px;
  transition: 0.6s ease;
  user-select: none;
}
.next_but {
  transform: rotate(180deg);
}
.page {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: var(--spacing-vertical-xsmall);
}
.content {
  display: flex;
  flex-direction: column;
  width: fit-content;
}
h4 {
  color: var(--color-text-heading-4-black);
  text-align: center;
  margin: 0;
  margin-bottom: var(--spacing-vertical-xsmall);
}
.storscene, .honsehuset, .heartbeat, .viggosverden, .studio54, .honsegaarden {
  display: flex;
  flex-direction: column;
  gap: 20px;
  background-color: var(--color-green-50);
  padding: var(--spacing-margin-small);
  border-radius: var(--spacing-corner-radius-medium);
}
@media (max-width: 700px) {
  .page {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-vertical-xsmall);
} 
.prev, .next {
  padding: 10px;
}
.prev img, .next img {
  width: 75%;
}
h4 {
  margin-bottom: var(--spacing-vertical-xxsmall);
}
}
</style>
