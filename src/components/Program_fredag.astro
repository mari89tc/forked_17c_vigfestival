---
import SkemaCardOneHour from "../components/SkemaCardOnehour.astro";
import SkemaCardOneAndAHalf from "../components/SkemaCardOneandahalf.astro";
import SkemaCardLong from "../components/SkemaCardLong.astro";
import SkemaCardOneandaquart from "./SkemaCardOneandaquart.astro";
---
<div class="slideshow-container">
    <div class="prev_next">
            <img class="prev" onclick="plusSlides(-1)" src="/logos/back_button.svg" alt="back button" width="85px" height="85px">
            <img class="next next_but" onclick="plusSlides(1)" src="/logos/back_button.svg" alt="back button" width="85px" height="85px">
    </div>  
    <div class="mySlides fade">
        <div class="page">
            <div class="content">
                <h4>Stor Scene</h4>
                <div class="storscene">
                    <SkemaCardOneandaquart head="Sømændene" time="12:00"/>
                    <SkemaCardOneandaquart head="KrebsFalch" time="15:15"/>
                    <SkemaCardOneandaquart head="Jonah Blacksmith" time="18:00"/>
                    <SkemaCardOneandaquart head="Nik & Jay" time="20:45"/>
                    <SkemaCardOneandaquart head="Infernal" time="23:30"/>
                </div>
            </div>
            <div class="content">
                <h4>Hønsehuset</h4>
                <div class="honsehuset">
                    <SkemaCardOneandaquart head="Luftens Helte" time="13:30"/>
                    <SkemaCardOneHour head="Djames Braun X Vild Smith" time="16:30"/>
                    <SkemaCardOneHour head="Gobs" time="19:30"/>
                    <SkemaCardOneHour head="Blæst" time="22:15"/>   
                </div>
            </div>
            <div class="content">
                <h4>Heartbeat</h4>
                <div class="heartbeat">
                    <SkemaCardOneandaquart head="Karl Hermans Trio" time="15:00"/>
                    <SkemaCardOneandaquart head="The Beatles Revival" time="18:15"/>
                    <SkemaCardOneandaquart head="Zididada" time="21:15"/>
                    <SkemaCardLong head="DJ 4Gaard" time="23:00"/>
                </div>   
            </div> 
        </div>
    </div>
    <div class="mySlides fade">
        <div class="page">
            <div class="content">
                <h4>Viggos Verden</h4>
                <div class="viggosverden">
                    <SkemaCardOneHour head="Mads & André" time="13:30"/>
                    <SkemaCardOneHour head="MGP 2024" time="16:30"/>
                    <SkemaCardOneHour head="Katrine Bille" time="19:15"/>
                </div>   
            </div>   
            <div class="content">
                <h4>Studio 54</h4>
                <div class="studio54">
                    <SkemaCardOneHour head="Elba" time="13:15"/>
                    <SkemaCardOneHour head="Solay" time="16:30"/>
                    <SkemaCardOneHour head="Mila" time="19:15"/>
                    <SkemaCardOneHour head="We are the 90`s" time="22:15"/>
                </div>   
            </div>   
            <div class="content">
                <h4>Hønsegården</h4>
                <div class="honsegaarden">
                    <SkemaCardOneHour head="Tom Donovan" time="15:15"/>
                    <SkemaCardOneHour head="Tom Donovan" time="17:30"/>
                    <SkemaCardOneHour head="Leo Adolph" time="20:30"/>
                </div>   
            </div> 
        </div>
    </div>
</div>
<script src="/src/scripts/slider.js"></script>

<style>
.slideshow-container {
  max-width: 1400px;
  position: relative;
  margin: auto;
}
.mySlides {
  display: none;
}
.mySlides:first-child {
  display: block;
}
.prev_next {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.prev, .next {
  cursor: pointer;
  width: auto;
  padding: 16px;
  transition: 0.6s ease;
  user-select: none;
}
.next_but {
  transform: rotate(180deg);
}
.page {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: var(--spacing-vertical-xsmall);
}
.content {
  display: flex;
  flex-direction: column;
  width: fit-content;
}
h4 {
  color: var(--color-text-heading-4-black);
  text-align: center;
  margin: 0;
  margin-bottom: var(--spacing-vertical-xsmall);
}
.storscene, .honsehuset, .heartbeat, .viggosverden, .studio54, .honsegaarden {
  display: flex;
  flex-direction: column;
  gap: 20px;
  background-color: var(--color-green-50);
  padding: var(--spacing-margin-small);
  border-radius: var(--spacing-corner-radius-medium);
}
@media (max-width: 700px) {
  .page {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-vertical-xsmall);
} 
.prev, .next {
  padding: 10px;
}
.prev img, .next img {
  width: 75%;
}
h4 {
  margin-bottom: var(--spacing-vertical-xxsmall);
}
}
</style>
